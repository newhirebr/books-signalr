# This is your Fastfile located at ./fastlane/Fastfile

default_platform(:ios)

platform :ios do
  desc "Push a new beta build to TestFlight"
  lane :beta do
    api_key = app_store_connect_api_key(
      key_id: "84AG5LAL42",
      issuer_id: "aaf8a98f-bbd1-47cd-81ff-f1e98ad51d13",
      key_filepath: "./AuthKey_D383SF739.p8"
    )
    # Sync certificates and provisioning profiles using match
    match(type: "appstore", api_key: app_store_connect_api_key)

    # Build your app
    build_app(
      workspace: "Runner.xcworkspace", 
      scheme: "Runner"
    )

    # Upload to TestFlight
    upload_to_testflight(api_key: app_store_connect_api_key)
  end
end
